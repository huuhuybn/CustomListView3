<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_open"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <EditText
        android:layout_marginTop="64dp"
        android:inputType="number"
        android:hint="Enter a number..."
        android:id="@+id/edtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_open"
        android:drawableRight="@drawable/ic_open"
        android:id="@+id/btnOpen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openNew"
        android:text="Use Bundler"
         />


    <Button
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_open"
        android:drawableRight="@drawable/ic_open"
        android:id="@+id/btnOpenLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openLink"
        android:text="open WebBrowser"
        />



    <Button
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_open"
        android:drawableRight="@drawable/ic_open"
        android:id="@+id/btnOpenCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openCall"
        android:text="open Call"
        />
</LinearLayout>